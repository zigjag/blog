<%- include("partials/header"); -%>

<form class="" action="/compose" method="get">
  <button class="btn btn-primary" type="submit" name="homeCompose">Compose</button>
  <input type="hidden" name="journalTitle" value="<%= journalTitle %>"></input>
  <h1><%= journalTitle %></h1>
</form>
<p> <%= homeContent %> </p>


<%  posts.forEach(function(post){ %>

<h1><%=post.title%></h1>
<p>
  <%=post.content.substring(0, 100) + " ..."%>
  <a href="/posts/<%=post._id%>">Read More</a>
</p>

<% }) %>


<%- include("partials/footer"); -%>
